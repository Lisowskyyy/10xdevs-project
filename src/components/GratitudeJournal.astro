---
// src/components/GratitudeJournal.astro
interface Props {
  userId: string;
}

const { userId } = Astro.props;
---

<div class="gratitude-journal-container">
  <h2 class="gratitude-journal-title">Dziennik Wdzięczności</h2>

  <form id="journalForm" class="space-y-4" data-user-id={userId}>
    <div class="relative">
      <textarea
        id="journalEntry"
        name="entry"
        rows="5"
        placeholder="Za co jesteś dzisiaj wdzięczny? (Nasionko słucha...)"
        class="gratitude-textarea"
        required></textarea>

      <!-- Loader (domyślnie ukryty) -->
      <div id="loader" class="gratitude-loader hidden">
        <div class="loader-content">
          <div class="loader-spinner"></div>
          <p class="loader-text">Analizuję Twoje myśli...</p>
        </div>
      </div>
    </div>

    <div class="gratitude-submit-wrapper">
      <button type="submit" class="gratitude-submit-btn" id="submitBtn">
        <span class="btn-text">Zapisz i Poczuj ✨</span>
        <span class="btn-loading" style="display: none;">
          <span class="loader-spinner-small"></span>
          <span>Analizuję...</span>
        </span>
      </button>
    </div>
  </form>

  <!-- Sekcja odpowiedzi AI (domyślnie ukryta) -->
  <div id="aiResponse" class="gratitude-ai-response hidden opacity-0">
    <div class="ai-response-content">
      <h3 class="ai-response-title">Refleksja Veranimy</h3>
      <p id="aiText" class="ai-response-text"></p>
    </div>
  </div>
</div>

<style>
  .gratitude-journal-container {
    background: rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 1.5rem;
    padding: 2.5rem;
    box-shadow:
      0 20px 60px rgba(0, 0, 0, 0.3),
      0 0 40px rgba(212, 175, 55, 0.1);
    position: relative;
    overflow: hidden;
  }

  .gratitude-journal-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.5), transparent);
  }

  .gratitude-journal-title {
    font-size: 1.875rem;
    font-weight: 300;
    color: #d4af37;
    margin-bottom: 2rem;
    font-family: "Georgia", "Times New Roman", serif;
    text-align: center;
    letter-spacing: 0.05em;
  }

  .gratitude-textarea {
    width: 100%;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.75rem;
    padding: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    line-height: 1.6;
    resize: none;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .gratitude-textarea::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .gratitude-textarea:focus {
    outline: none;
    border-color: rgba(212, 175, 55, 0.5);
    background: rgba(0, 0, 0, 0.4);
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  }

  .gratitude-loader {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 0.75rem;
    display: none;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(4px);
  }

  .gratitude-loader:not(.hidden) {
    display: flex;
  }

  .loader-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .loader-spinner {
    width: 2rem;
    height: 2rem;
    border: 2px solid rgba(212, 175, 55, 0.3);
    border-top-color: #d4af37;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .loader-text {
    font-size: 0.875rem;
    color: #d4af37;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.6;
    }
  }

  .gratitude-submit-wrapper {
    display: flex;
    justify-content: flex-end;
    margin-top: 1.5rem;
  }

  .gratitude-submit-btn {
    padding: 0.875rem 2rem;
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.9) 0%, #d4af37 100%);
    color: #0a0a0f;
    font-weight: 600;
    border: none;
    border-radius: 0.75rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1rem;
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
  }

  .gratitude-submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(212, 175, 55, 0.4);
    background: linear-gradient(135deg, #d4af37 0%, rgba(212, 175, 55, 0.95) 100%);
  }

  .gratitude-submit-btn:active {
    transform: translateY(0);
  }

  .gratitude-submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .btn-loading {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .loader-spinner-small {
    width: 1rem;
    height: 1rem;
    border: 2px solid rgba(10, 10, 15, 0.3);
    border-top-color: #0a0a0f;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  .gratitude-ai-response {
    margin-top: 2rem;
    transition: opacity 0.7s ease;
  }

  .ai-response-content {
    padding: 1.5rem;
    background: rgba(139, 69, 139, 0.15);
    backdrop-filter: blur(10px);
    border-left: 3px solid rgba(212, 175, 55, 0.6);
    border-radius: 0 0.75rem 0.75rem 0;
  }

  .ai-response-title {
    font-size: 0.75rem;
    font-weight: 700;
    color: rgba(212, 175, 55, 0.9);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .ai-response-text {
    color: rgba(255, 255, 255, 0.85);
    font-style: italic;
    line-height: 1.7;
    margin: 0;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .gratitude-journal-container {
      padding: 1.75rem;
    }

    .gratitude-journal-title {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .gratitude-textarea {
      padding: 1rem;
      font-size: 0.95rem;
    }
  }
</style>

<!-- eslint-disable prettier/prettier -->
<script is:inline>
  // Logika po stronie klienta (Client-Side)
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("journalForm");
    const loader = document.getElementById("loader");
    const aiResponse = document.getElementById("aiResponse");
    const aiText = document.getElementById("aiText");
    const submitBtn = document.getElementById("submitBtn");
    const entryElement = document.getElementById("journalEntry");

    if (form && form instanceof HTMLFormElement) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const entry = entryElement && entryElement instanceof HTMLTextAreaElement ? entryElement.value.trim() : "";

        // Validate entry is not empty
        if (!entry) {
          alert("Proszę wpisać treść wpisu.");
          return;
        }

        // Wywołanie naszego Endpointu API
        // Wysyłamy userId z props oraz tekst wpisu
        const userId = form.dataset.userId;
        if (!userId) {
          alert("Błąd: Brak identyfikatora użytkownika.");
          return;
        }

        // Set loading state: disable button, show loader overlay, show button loading state
        if (submitBtn) {
          submitBtn.disabled = true;
          const btnTextEl = submitBtn.querySelector(".btn-text");
          const btnLoadingEl = submitBtn.querySelector(".btn-loading");
          if (btnTextEl && btnTextEl instanceof HTMLElement) btnTextEl.style.display = "none";
          if (btnLoadingEl && btnLoadingEl instanceof HTMLElement) btnLoadingEl.style.display = "flex";
        }

        if (loader) loader.classList.remove("hidden");
        if (aiResponse) {
          aiResponse.classList.add("hidden");
          aiResponse.classList.remove("opacity-100");
        }

        try {
          const res = await fetch("/api/journal", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ text: entry, userId: userId }),
          });

          const data = await res.json();

          if (data.success) {
            // UI: Sukces
            if (aiText) aiText.textContent = `"${data.aiResponse}"`;
            if (aiResponse) {
              aiResponse.classList.remove("hidden");
              // Małe opóźnienie dla efektu fade-in
              setTimeout(() => {
                aiResponse.classList.add("opacity-100");
              }, 50);
            }
            form.reset();
          } else {
            alert("Coś poszło nie tak: " + (data.error || "Błąd nieznany"));
          }
        } catch {
          // Error handling - user-friendly message
          alert("Błąd połączenia z Veranimą.");
        } finally {
          // Reset loading state: hide loader overlay, restore button state
          if (loader) loader.classList.add("hidden");
          if (submitBtn) {
            submitBtn.disabled = false;
            const btnTextEl = submitBtn.querySelector(".btn-text");
            const btnLoadingEl = submitBtn.querySelector(".btn-loading");
            if (btnTextEl && btnTextEl instanceof HTMLElement) btnTextEl.style.display = "inline";
            if (btnLoadingEl && btnLoadingEl instanceof HTMLElement) btnLoadingEl.style.display = "none";
          }
        }
      });
    }
  });
</script>
<!-- eslint-enable prettier/prettier -->
