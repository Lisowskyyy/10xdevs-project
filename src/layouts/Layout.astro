---
import "../styles/global.css";

interface Props {
  title?: string;
  showNav?: boolean;
  description?: string;
  image?: string;
}

const { title, showNav, description, image }: Props = Astro.props;
const pageTitle = title || "VERANIMA";
const pageDescription = description || "Twoja cyfrowa świątynia. Uwolnij umysł i odnajdź spokój.";
const pageImage = image || "/og_logo.png";
const showNavigation = showNav ?? true;
const currentPath = Astro.url.pathname;
const absoluteImageUrl = new URL(pageImage, Astro.url.origin).href;

// Definicja linków w jednym miejscu (łatwiej zarządzać)
const navLinks = [
  { href: "/dashboard", label: "STRONA GŁÓWNA", desc: "Centrum dowodzenia" },
  { href: "/journal", label: "DZIENNIK", desc: "Twoje myśli i emocje" },
  { href: "/gratitude", label: "WDIĘCZNOŚĆ", desc: "Praktyka wdzięczności" },
  { href: "/field-circles", label: "KRĘGI MEDYTACYJNE", desc: "Wspólna medytacja" },
  { href: "/dracarys", label: "DRACARYS", desc: "Spal to, co zbędne" },
  { href: "/progress", label: "POSTĘPY", desc: "Twoja statystyka" },
  { href: "/profile", label: "PROFIL", desc: "Ustawienia konta" },
];
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={absoluteImageUrl} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={absoluteImageUrl} />
    
    <!-- Font: Outfit (Nowoczesny, czysty) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  
  <!-- Nowe ciemne tło dla całej aplikacji -->
  <body class="bg-slate-950 text-slate-300 font-['Outfit',sans-serif] antialiased selection:bg-indigo-500/30 min-h-screen flex flex-col">

    <!-- TŁO PREMIUM (Fixed) - Daje ten klimat kosmosu na każdej stronie -->
    <div class="fixed inset-0 z-[-1] pointer-events-none overflow-hidden">
        <div class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] rounded-full bg-indigo-900/10 blur-[120px] animate-pulse-slow"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] rounded-full bg-violet-900/10 blur-[120px] animate-pulse-slow" style="animation-delay: 2s"></div>
    </div>

    {showNavigation && (
      <>
        <!-- GÓRNY PASEK (Sticky & Glass) -->
        <nav class="fixed top-0 left-0 w-full z-50 border-b border-white/5 bg-slate-900/80 backdrop-blur-md transition-all duration-300">
          <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
            
            <!-- LOGO -->
            <a href="/dashboard" class="flex items-center gap-3 group z-50 relative">
              <span class="text-xl font-['Playfair_Display',serif] font-bold bg-gradient-to-r from-amber-200 to-yellow-500 bg-clip-text text-transparent tracking-tight">
                VERANIMA
              </span>
            </a>

            <!-- PRZYCISK HAMBURGERA -->
            <button id="menu-btn" class="relative z-50 w-12 h-12 rounded-full bg-white/5 hover:bg-white/10 border border-white/10 flex flex-col items-center justify-center gap-1.5 transition-all group">
              <span class="w-6 h-0.5 bg-slate-300 rounded-full transition-all duration-300 group-hover:w-8 origin-right menu-bar-1"></span>
              <span class="w-6 h-0.5 bg-slate-300 rounded-full transition-all duration-300 group-hover:w-4 origin-right menu-bar-2"></span>
              <span class="w-6 h-0.5 bg-slate-300 rounded-full transition-all duration-300 group-hover:w-6 origin-right menu-bar-3"></span>
            </button>

          </div>
        </nav>

        <!-- TŁO MODALNE (Ciemne tło pod menu) -->
        <div id="menu-overlay" class="fixed inset-0 z-40 bg-black/60 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-500"></div>

        <!-- PANEL BOCZNY (Wysuwane Menu) -->
        <div id="menu-sidebar" class="fixed top-0 right-0 h-full w-full md:w-[400px] z-40 bg-[#0a0a16]/95 border-l border-white/10 backdrop-blur-2xl transform translate-x-full transition-transform duration-500 ease-[cubic-bezier(0.22,1,0.36,1)] shadow-[-20px_0_50px_rgba(0,0,0,0.5)] pt-28 pb-10 px-6 flex flex-col">
            
            <!-- Sidebar Toggle Arrow Button -->
            <button id="sidebar-close-btn" class="absolute top-6 left-6 w-10 h-10 flex items-center justify-center rounded-full bg-white/5 hover:bg-white/10 border border-white/10 transition-all group">
                <svg class="w-5 h-5 text-slate-300 group-hover:text-amber-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
            
            <div class="flex flex-col gap-2 flex-1 overflow-y-auto custom-scrollbar">
                {navLinks.map((link, index) => {
                    // Sprawdzamy czy jesteśmy na danej podstronie
                    const isActive = currentPath === link.href || (link.href !== '/dashboard' && currentPath.startsWith(link.href));
                    
                    return (
                        <a 
                            href={link.href} 
                            class={`group flex items-center gap-4 p-4 rounded-2xl transition-colors duration-300 border border-transparent hover:bg-white/5 hover:border-white/5 ${isActive ? 'bg-amber-500/10 border-amber-500/20' : ''}`}
                            style={`transition-delay: ${index * 50}ms`}
                        >
                            <div>
                                <div class={`font-bold text-lg uppercase tracking-wide transition-colors ${isActive ? 'text-amber-400' : 'text-slate-300 group-hover:text-amber-400'}`}>{link.label}</div>
                                <div class="text-xs text-slate-600 font-light">{link.desc}</div>
                            </div>
                            {isActive && <div class="ml-auto text-amber-400 animate-pulse">●</div>}
                        </a>
                    )
                })}
            </div>

            <!-- Stopka Menu -->
            <div class="mt-auto pt-6 border-t border-white/5">
                <form action="/api/auth/signout" method="POST">
                    <button type="submit" class="w-full py-4 rounded-xl bg-white/5 hover:bg-red-500/10 hover:text-red-300 text-slate-400 text-sm font-bold uppercase tracking-widest transition-all border border-white/5 hover:border-red-500/20 flex items-center justify-center gap-2 group">
                        <span>Wyloguj się</span>
                        <span class="inline-flex items-center justify-center w-6 h-6 group-hover:translate-x-1 transition-transform text-lg leading-none">→</span>
                    </button>
                </form>
                
                <div class="text-center mt-4 text-xs text-slate-600 uppercase tracking-widest">
                    Veranima v1.0
                </div>
            </div>
        </div>

        <!-- Script do obsługi menu -->
        <script is:inline>
            /* eslint-disable */
            (function() {
                const menuBtn = document.getElementById('menu-btn');
                const menuSidebar = document.getElementById('menu-sidebar');
                const menuOverlay = document.getElementById('menu-overlay');
                const sidebarCloseBtn = document.getElementById('sidebar-close-btn');
                const menuBars = document.querySelectorAll('.menu-bar-1, .menu-bar-2, .menu-bar-3');
                let isOpen = false;

                function toggleMenu() {
                    isOpen = !isOpen;
                    
                    if (isOpen) {
                        if (menuSidebar) menuSidebar.classList.remove('translate-x-full');
                        if (menuOverlay) menuOverlay.classList.remove('opacity-0', 'pointer-events-none');
                        
                        if (menuBars[0]) menuBars[0].classList.add('rotate-45', 'translate-y-[9px]', '-translate-x-[2px]', 'w-8');
                        if (menuBars[1]) menuBars[1].classList.add('opacity-0');
                        if (menuBars[2]) menuBars[2].classList.add('-rotate-45', '-translate-y-[9px]', '-translate-x-[2px]', 'w-8');
                    } else {
                        if (menuSidebar) menuSidebar.classList.add('translate-x-full');
                        if (menuOverlay) menuOverlay.classList.add('opacity-0', 'pointer-events-none');

                        if (menuBars[0]) menuBars[0].classList.remove('rotate-45', 'translate-y-[9px]', '-translate-x-[2px]', 'w-8');
                        if (menuBars[1]) menuBars[1].classList.remove('opacity-0');
                        if (menuBars[2]) menuBars[2].classList.remove('-rotate-45', '-translate-y-[9px]', '-translate-x-[2px]', 'w-8');
                    }
                }

                function closeMenu() {
                    if (isOpen) {
                        toggleMenu();
                    }
                }

                if (menuBtn) menuBtn.addEventListener('click', toggleMenu);
                if (menuOverlay) menuOverlay.addEventListener('click', toggleMenu);
                if (sidebarCloseBtn) sidebarCloseBtn.addEventListener('click', closeMenu);
            })();
        </script>
      </>
    )}
    
    <!-- Margines dla Navbaru -->
    {showNavigation && <div class="h-20"></div>}

    <!-- Zawartość strony -->
    <main class="flex-1 w-full">
        <slot />
    </main>

  </body>
</html>

<style is:global>
  /* Globalne style dla paska przewijania */
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: #0f172a; 
  }
  ::-webkit-scrollbar-thumb {
    background: #334155; 
    border-radius: 4px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #475569; 
  }

  @keyframes pulse-slow {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.05); }
  }
  .animate-pulse-slow {
    animation: pulse-slow 8s infinite ease-in-out;
  }
</style>
