---
import "../styles/global.css";

interface Props {
  title?: string;
  showNav?: boolean;
}

const { title, showNav }: Props = Astro.props;
const pageTitle = title || "VERANIMA";
const showNavigation = showNav ?? true;
const currentPath = Astro.url.pathname;

// Definicja linkÃ³w w jednym miejscu (Å‚atwiej zarzÄ…dzaÄ‡)
const navLinks = [
  { href: "/dashboard", label: "Dashboard", icon: "ğŸ ", desc: "Centrum dowodzenia" },
  { href: "/journal", label: "Dziennik", icon: "ğŸ“", desc: "Twoje myÅ›li i emocje" },
  { href: "/gratitude", label: "WdziÄ™cznoÅ›Ä‡", icon: "ğŸ’š", desc: "Praktyka wdziÄ™cznoÅ›ci" },
  { href: "/field-circles", label: "KrÄ™gi Mocy", icon: "ğŸŒ", desc: "WspÃ³lna medytacja" },
  { href: "/dracarys", label: "Dracarys", icon: "ğŸ‰", desc: "Spal to, co zbÄ™dne" },
  { href: "/progress", label: "PostÄ™py", icon: "ğŸ“Š", desc: "Twoja statystyka" },
  { href: "/profile", label: "Profil", icon: "ğŸ‘¤", desc: "Ustawienia konta" },
];
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    
    <!-- Font: Outfit (Nowoczesny, czysty) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  
  <!-- Nowe ciemne tÅ‚o dla caÅ‚ej aplikacji -->
  <body class="bg-[#03030b] text-slate-200 font-['Outfit',sans-serif] antialiased selection:bg-indigo-500/30 min-h-screen flex flex-col">

    <!-- TÅO PREMIUM (Fixed) - Daje ten klimat kosmosu na kaÅ¼dej stronie -->
    <div class="fixed inset-0 z-[-1] pointer-events-none overflow-hidden">
        <div class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] rounded-full bg-indigo-900/10 blur-[120px] animate-pulse-slow"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] rounded-full bg-violet-900/10 blur-[120px] animate-pulse-slow" style="animation-delay: 2s"></div>
    </div>

    {showNavigation && (
      <>
        <!-- GÃ“RNY PASEK (Sticky & Glass) -->
        <nav class="fixed top-0 left-0 w-full z-50 border-b border-white/5 bg-[#050511]/80 backdrop-blur-xl transition-all duration-300">
          <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
            
            <!-- LOGO -->
            <a href="/dashboard" class="flex items-center gap-3 group z-50 relative">
              <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-600 to-violet-600 flex items-center justify-center text-xl shadow-lg shadow-indigo-500/20 group-hover:rotate-12 transition-transform duration-500">
                ğŸ’œ
              </div>
              <span class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-indigo-200 tracking-tight">
                VERANIMA
              </span>
            </a>

            <!-- PRZYCISK HAMBURGERA -->
            <button id="menu-btn" class="relative z-50 w-12 h-12 rounded-full bg-white/5 hover:bg-white/10 border border-white/10 flex flex-col items-center justify-center gap-1.5 transition-all group">
              <span class="w-6 h-0.5 bg-indigo-200 rounded-full transition-all duration-300 group-hover:w-8 origin-right menu-bar-1"></span>
              <span class="w-6 h-0.5 bg-indigo-200 rounded-full transition-all duration-300 group-hover:w-4 origin-right menu-bar-2"></span>
              <span class="w-6 h-0.5 bg-indigo-200 rounded-full transition-all duration-300 group-hover:w-6 origin-right menu-bar-3"></span>
            </button>

          </div>
        </nav>

        <!-- TÅO MODALNE (Ciemne tÅ‚o pod menu) -->
        <div id="menu-overlay" class="fixed inset-0 z-40 bg-black/60 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-500"></div>

        <!-- PANEL BOCZNY (Wysuwane Menu) -->
        <div id="menu-sidebar" class="fixed top-0 right-0 h-full w-full md:w-[400px] z-40 bg-[#0a0a16]/95 border-l border-white/10 backdrop-blur-2xl transform translate-x-full transition-transform duration-500 ease-[cubic-bezier(0.22,1,0.36,1)] shadow-[-20px_0_50px_rgba(0,0,0,0.5)] pt-28 pb-10 px-6 flex flex-col">
            
            <div class="flex flex-col gap-2 flex-1 overflow-y-auto custom-scrollbar">
                {navLinks.map((link, index) => {
                    // Sprawdzamy czy jesteÅ›my na danej podstronie
                    const isActive = currentPath === link.href || (link.href !== '/dashboard' && currentPath.startsWith(link.href));
                    
                    return (
                        <a 
                            href={link.href} 
                            class={`group flex items-center gap-4 p-4 rounded-2xl transition-all duration-300 border border-transparent hover:bg-white/5 hover:border-white/5 ${isActive ? 'bg-indigo-500/10 border-indigo-500/20' : ''}`}
                            style={`transition-delay: ${index * 50}ms`}
                        >
                            <span class="text-2xl group-hover:scale-110 transition-transform duration-300">{link.icon}</span>
                            <div>
                                <div class={`font-bold text-lg ${isActive ? 'text-indigo-300' : 'text-white group-hover:text-indigo-200'}`}>{link.label}</div>
                                <div class="text-xs text-white/40 font-light">{link.desc}</div>
                            </div>
                            {isActive && <div class="ml-auto text-indigo-400 animate-pulse">â—</div>}
                        </a>
                    )
                })}
            </div>

            <!-- Stopka Menu -->
            <div class="mt-auto pt-6 border-t border-white/5">
                <form action="/api/auth/signout" method="POST">
                    <button type="submit" class="w-full py-4 rounded-xl bg-white/5 hover:bg-red-500/10 hover:text-red-300 text-indigo-200/60 text-sm font-bold uppercase tracking-widest transition-all border border-white/5 hover:border-red-500/20 flex items-center justify-center gap-2 group">
                        <span>Wyloguj siÄ™</span>
                        <span class="group-hover:translate-x-1 transition-transform">â†’</span>
                    </button>
                </form>
                
                <div class="text-center mt-4 text-[10px] text-white/20 uppercase tracking-widest font-mono">
                    Veranima v1.0
                </div>
            </div>
        </div>

        <!-- Script do obsÅ‚ugi menu -->
        <script is:inline>
            /* eslint-disable */
            (function() {
                const menuBtn = document.getElementById('menu-btn');
                const menuSidebar = document.getElementById('menu-sidebar');
                const menuOverlay = document.getElementById('menu-overlay');
                const menuBars = document.querySelectorAll('.menu-bar-1, .menu-bar-2, .menu-bar-3');
                let isOpen = false;

                function toggleMenu() {
                    isOpen = !isOpen;
                    
                    if (isOpen) {
                        if (menuSidebar) menuSidebar.classList.remove('translate-x-full');
                        if (menuOverlay) menuOverlay.classList.remove('opacity-0', 'pointer-events-none');
                        
                        if (menuBars[0]) menuBars[0].classList.add('rotate-45', 'translate-y-[9px]', '-translate-x-[2px]', 'w-8');
                        if (menuBars[1]) menuBars[1].classList.add('opacity-0');
                        if (menuBars[2]) menuBars[2].classList.add('-rotate-45', '-translate-y-[9px]', '-translate-x-[2px]', 'w-8');
                    } else {
                        if (menuSidebar) menuSidebar.classList.add('translate-x-full');
                        if (menuOverlay) menuOverlay.classList.add('opacity-0', 'pointer-events-none');

                        if (menuBars[0]) menuBars[0].classList.remove('rotate-45', 'translate-y-[9px]', '-translate-x-[2px]', 'w-8');
                        if (menuBars[1]) menuBars[1].classList.remove('opacity-0');
                        if (menuBars[2]) menuBars[2].classList.remove('-rotate-45', '-translate-y-[9px]', '-translate-x-[2px]', 'w-8');
                    }
                }

                if (menuBtn) menuBtn.addEventListener('click', toggleMenu);
                if (menuOverlay) menuOverlay.addEventListener('click', toggleMenu);
            })();
        </script>
      </>
    )}
    
    <!-- Margines dla Navbaru -->
    {showNavigation && <div class="h-20"></div>}

    <!-- ZawartoÅ›Ä‡ strony -->
    <main class="flex-1 w-full">
        <slot />
    </main>

  </body>
</html>

<style is:global>
  /* Globalne style dla paska przewijania */
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: #050511; 
  }
  ::-webkit-scrollbar-thumb {
    background: #2d2d44; 
    border-radius: 4px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #4f46e5; 
  }

  @keyframes pulse-slow {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.05); }
  }
  .animate-pulse-slow {
    animation: pulse-slow 8s infinite ease-in-out;
  }
</style>
