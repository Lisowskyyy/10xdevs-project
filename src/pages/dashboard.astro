---
import Layout from "../layouts/Layout.astro";
import GratitudeJournal from "../components/GratitudeJournal.astro";
import { createServerSupabaseClient } from "../lib/supabase";
import { getUserProfile } from "../lib/identity";

const supabase = createServerSupabaseClient(Astro.cookies);

// Get current user session
const {
  data: { session },
  error: sessionError,
} = await supabase.auth.getSession();

if (!session || sessionError) {
  return Astro.redirect("/login");
}

// Fetch user profile data using the identity service
const userProfile = await getUserProfile(supabase);

if (!userProfile) {
  return Astro.redirect("/login");
}

// Get user's first name for greeting
const firstName = userProfile.firstName || "Podr√≥≈ºniku";

// Check if this is a new user's first visit (via welcome parameter)
const isNewUser = Astro.url.searchParams.get("welcome") === "true";

// Determine greeting text
const greetingText = isNewUser ? "Witaj na platformie," : "Witaj ponownie,";

// Get stage info for display
const stageInfo: Record<string, { name: string; color: string; emoji: string }> = {
  nigredo: { name: "Nigredo", color: "from-gray-900 to-black", emoji: "üåë" },
  albedo: { name: "Albedo", color: "from-gray-100 to-white", emoji: "üåï" },
  citrinitas: { name: "Citrinitas", color: "from-yellow-500 to-amber-600", emoji: "‚òÄÔ∏è" },
  rubedo: { name: "Rubedo", color: "from-red-500 to-rose-700", emoji: "üî•" },
};

const currentStage = stageInfo[userProfile.currentStage] || stageInfo.nigredo;
---

<Layout title="Dashboard - VERANIMA">
  <div class="dashboard-container">
    <!-- Main Content -->
    <main class="dashboard-main">
      <!-- Hero Section - Welcome -->
      <section class="hero-section">
        <div class="hero-glow"></div>
        <div class="hero-content">
          <h1 class="hero-greeting">{greetingText}</h1>
          <h2 class="hero-name">{firstName}</h2>
          <p class="hero-tagline">Kontynuuj swojƒÖ podr√≥≈º oczyszczenia duszy</p>
        </div>
        <a href="/profile" class="edit-profile-btn">Edytuj profil</a>
      </section>

      <!-- Centerpiece - Gratitude Journal -->
      <section class="journal-section">
        <div class="journal-wrapper">
          <GratitudeJournal userId={session.user.id} />
        </div>
      </section>

      <!-- Stats & Features Grid -->
      <section class="cards-grid">
        <!-- Stats Cards -->
        <div class="stat-card glass-card">
          <div class="stat-icon">üî•</div>
          <div class="stat-content">
            <p class="stat-label">Aktualna passa</p>
            <p class="stat-value">{userProfile.streakDays} days</p>
          </div>
        </div>

        <div class="stat-card glass-card">
          <div class="stat-icon">üìù</div>
          <div class="stat-content">
            <p class="stat-label">Ilo≈õƒá wpis√≥w</p>
            <p class="stat-value">{userProfile.totalEntries}</p>
          </div>
        </div>

        <div class="stat-card glass-card">
          <div class="stat-icon">{currentStage.emoji}</div>
          <div class="stat-content">
            <p class="stat-label">Etap Alchemiczny</p>
            <p class="stat-value">{currentStage.name}</p>
          </div>
        </div>

        <div class="stat-card glass-card">
          <div class="stat-icon">üåç</div>
          <div class="stat-content">
            <p class="stat-label">Krƒôgi medytacyjne</p>
            <p class="stat-value">{userProfile.totalCircles}</p>
          </div>
        </div>

        <!-- Feature Cards -->
        <a href="/journal" class="feature-card glass-card">
          <div class="feature-icon">üìñ</div>
          <h3>Dziennik</h3>
          <p>Zapisz swoje my≈õli i otrzymaj wskaz√≥wki od Veranimy</p>
        </a>

        <a href="/dracarys" class="feature-card glass-card">
          <div class="feature-icon">üî•</div>
          <h3>Dracarys</h3>
          <p>Przekszta≈Çƒá i uwolnij negatywne my≈õli i lƒôki</p>
        </a>

        <a href="/field-circles" class="feature-card glass-card">
          <div class="feature-icon">üåê</div>
          <h3>Krƒôgi medytacyjne</h3>
          <p>Do≈ÇƒÖcz do globalnych sesji medytacyjnych lub tw√≥rz w≈Çasne</p>
        </a>

        <a href="/progress" class="feature-card glass-card">
          <div class="feature-icon">üìä</div>
          <h3>Postƒôpy</h3>
          <p>≈öled≈∫ swojƒÖ podr√≥≈º oczyszczenia duszy</p>
        </a>
      </section>
    </main>
  </div>
</Layout>

<style>
  .dashboard-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #0a0a0f 0%, #1a1625 25%, #0f0f1a 50%, #1a1625 75%, #0a0a0f 100%);
    background-size: 400% 400%;
    animation: gradientShift 15s ease infinite;
    color: white;
    position: relative;
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .dashboard-main {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 2rem;
    position: relative;
    z-index: 1;
  }

  /* Hero Section */
  .hero-section {
    text-align: center;
    margin-bottom: 5rem;
    position: relative;
    padding: 3rem 0;
  }

  .hero-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 300px;
    background: radial-gradient(
      ellipse at center,
      rgba(212, 175, 55, 0.15) 0%,
      rgba(212, 175, 55, 0.05) 40%,
      transparent 70%
    );
    filter: blur(60px);
    z-index: 0;
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    margin-bottom: 2rem;
  }

  .hero-greeting {
    font-size: 1.5rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.5rem;
    letter-spacing: 0.05em;
  }

  .hero-name {
    font-size: 4rem;
    font-weight: 400;
    font-family: "Georgia", "Times New Roman", serif;
    background: linear-gradient(135deg, #f4e5c3 0%, #d4af37 50%, #f4e5c3 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0.5rem 0 1rem;
    letter-spacing: 0.02em;
  }

  .hero-tagline {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 300;
    letter-spacing: 0.03em;
  }

  .edit-profile-btn {
    position: relative;
    z-index: 1;
    display: inline-block;
    padding: 0.75rem 2rem;
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 2rem;
    color: #d4af37;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .edit-profile-btn:hover {
    background: rgba(212, 175, 55, 0.2);
    border-color: rgba(212, 175, 55, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(212, 175, 55, 0.2);
  }

  /* Journal Section - Centerpiece */
  .journal-section {
    margin-bottom: 5rem;
    padding: 3rem 0;
  }

  .journal-wrapper {
    max-width: 56rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Unified Cards Grid */
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .cards-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .cards-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Glassmorphism Card Base */
  .glass-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.25rem;
    padding: 1.75rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .glass-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.3), transparent);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .glass-card:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(212, 175, 55, 0.4);
    transform: translateY(-6px);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 0 20px rgba(212, 175, 55, 0.1);
  }

  .glass-card:hover::before {
    opacity: 1;
  }

  /* Stat Cards */
  .stat-card {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .stat-icon {
    font-size: 2.5rem;
    line-height: 1;
    flex-shrink: 0;
  }

  .stat-content {
    flex: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .stat-value {
    font-size: 1.75rem;
    font-weight: 600;
    color: white;
    line-height: 1.2;
  }

  /* Feature Cards */
  .feature-card {
    text-decoration: none;
    color: white;
    display: flex;
    flex-direction: column;
    text-align: center;
  }

  .feature-icon {
    font-size: 3.5rem;
    margin-bottom: 1.25rem;
    line-height: 1;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .feature-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: white;
  }

  .feature-card p {
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.6;
    font-size: 0.95rem;
    margin: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-name {
      font-size: 2.5rem;
    }

    .hero-greeting {
      font-size: 1.25rem;
    }

    .hero-tagline {
      font-size: 1rem;
    }

    .dashboard-main {
      padding: 2rem 1.5rem;
    }

    .journal-section {
      padding: 2rem 0;
      margin-bottom: 3rem;
    }

    .hero-section {
      margin-bottom: 3rem;
      padding: 2rem 0;
    }

    .hero-glow {
      width: 400px;
      height: 200px;
    }
  }
</style>
