import Layout from "../layouts/Layout.astro";
import { createServerSupabaseClient } from "../lib/supabase";

const supabase = createServerSupabaseClient(Astro.cookies);

// Pobierz aktualnego u≈ºytkownika
const {
  data: { session },
} = await supabase.auth.getSession();

if (!session) {
  return Astro.redirect("/login");
}

// Obs≈Çuga formularza spalania
let burnMessage = "";
let errorMessage = "";

if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  const content = formData.get("content")?.toString();
  const transmutation = formData.get("transmutation")?.toString();

  if (content && content.trim()) {
    if (content.trim().length < 3) {
      errorMessage = "Tre≈õƒá musi mieƒá co najmniej 3 znaki.";
    } else if (content.trim().length > 500) {
      errorMessage = "Tre≈õƒá nie mo≈ºe byƒá d≈Çu≈ºsza ni≈º 500 znak√≥w.";
    } else {
      // Zapisz do burned_entries
      const { error } = await supabase.from("burned_entries").insert({
        user_id: session.user.id,
        original_content: content.trim(),
        transmutation_note: transmutation?.trim() || null,
      });

      if (error) {
        console.error("B≈ÇƒÖd Supabase:", error);
        errorMessage = "Nie uda≈Ço siƒô spaliƒá. Spr√≥buj ponownie.";
      } else {
        burnMessage = "üî• Spalono! Transmutacja zako≈Ñczona. üî•";
      }
    }
  } else {
    errorMessage = "Wpisz co chcesz spaliƒá.";
  }
}

// Pobierz spalone wpisy
const { data: burnedEntries } = await supabase
  .from("burned_entries")
  .select("*")
  .eq("user_id", session.user.id)
  .order("id", { ascending: false })
  .limit(10);
---

<Layout title="Dracarys - VERANIMA">
  <div class="dracarys-container">
    <!-- Header -->
    <header class="dracarys-header">
      <div class="header-content">
        <a href="/dashboard" class="back-link">‚Üê Dashboard</a>
        <h1>üî• Dracarys Mode üî•</h1>
      </div>
    </header>

    <main class="dracarys-main">
      <!-- Intro -->
      <section class="intro-section">
        <h2>Spal to, co Ciƒô ogranicza</h2>
        <p class="subtitle">
          Zapisz negatywnƒÖ my≈õl, przekonanie lub emocjƒô. Nastƒôpnie zamie≈Ñ jƒÖ w co≈õ pozytywnego poprzez transmutacjƒô.
        </p>
      </section>

      <!-- Komunikaty -->
      {burnMessage && <div class="alert alert-success">{burnMessage}</div>}
      {errorMessage && <div class="alert alert-error">{errorMessage}</div>}

      <!-- Formularz spalania -->
      <section class="burn-section">
        <form method="POST" class="burn-form" id="burnForm">
          <!-- Co spaliƒá -->
          <div class="form-group">
            <label for="content">Co chcesz spaliƒá?</label>
            <textarea
              id="content"
              name="content"
              rows="4"
              maxlength="500"
              placeholder="Np. Strach przed pora≈ºkƒÖ, poczucie ma≈Ço≈õci, z≈Ço≈õƒá na siebie..."
              required></textarea>
            <div class="char-counter">
              <span id="char-count">0</span>/500 znak√≥w
            </div>
          </div>

          <!-- Na co transmutowaƒá -->
          <div class="form-group">
            <label for="transmutation">Na co to transmutujesz? (opcjonalne)</label>
            <textarea
              id="transmutation"
              name="transmutation"
              rows="3"
              maxlength="500"
              placeholder="Np. Odwaga do dzia≈Çania, pewno≈õƒá siebie, mi≈Ço≈õƒá do siebie..."></textarea>
          </div>

          <!-- Button z animacjƒÖ -->
          <button type="submit" class="btn-burn" id="burnButton">
            <span class="btn-text">üî• SPAL TO! üî•</span>
          </button>
        </form>

        <!-- Fire Animation Container -->
        <div class="fire-container" id="fireContainer">
          <div class="fire">
            <div class="flame"></div>
            <div class="flame"></div>
            <div class="flame"></div>
            <div class="flame"></div>
            <div class="flame"></div>
          </div>
        </div>
      </section>

      <!-- Spalone wpisy -->
      <section class="burned-section">
        <h2>Transmutowane</h2>
        {
          burnedEntries && burnedEntries.length > 0 ? (
            <div class="burned-list">
              {burnedEntries.map((entry) => (
                <div class="burned-card">
                  <div class="burned-header">
                    <span class="burned-icon">üî•</span>
                    <span class="burned-date">
                      {new Date(entry.id).toLocaleDateString("pl-PL", {
                        day: "numeric",
                        month: "long",
                        year: "numeric",
                      })}
                    </span>
                  </div>
                  <div class="burned-content">
                    <div class="original">
                      <strong>Spalono:</strong>
                      <p>{entry.original_content}</p>
                    </div>
                    {entry.transmuted_note && (
                      <div class="transmuted">
                        <strong>Transmutowano na:</strong>
                        <p>{entry.transmuted_note}</p>
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
          ) : (
            <div class="empty-state">
              <p>Jeszcze nic nie spali≈Çe≈õ. Czas na pierwszƒÖ transmutacjƒô! üî•</p>
            </div>
          )
        }
      </section>
    </main>
  </div>
</Layout>

<style>
  .dracarys-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #1a0000 0%, #330000 50%, #1a0000 100%);
    color: white;
  }

  .dracarys-header {
    backdrop-filter: blur(10px);
    background: rgba(255, 50, 0, 0.1);
    border-bottom: 1px solid rgba(255, 100, 0, 0.3);
    padding: 1.5rem 2rem;
  }

  .header-content {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .back-link {
    color: #ff6b35;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.3s;
  }

  .back-link:hover {
    opacity: 0.8;
  }

  .dracarys-header h1 {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .dracarys-main {
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .intro-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  .intro-section h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
  }

  .alert {
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .alert-success {
    background: rgba(255, 107, 53, 0.2);
    border: 1px solid rgba(255, 107, 53, 0.5);
    color: #ff6b35;
    font-weight: 600;
  }

  .alert-error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #ef4444;
  }

  .burn-section {
    position: relative;
    margin-bottom: 4rem;
  }

  .burn-form {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 100, 0, 0.2);
    border-radius: 1rem;
    padding: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .form-group textarea {
    width: 100%;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 100, 0, 0.3);
    border-radius: 0.75rem;
    color: white;
    font-size: 1rem;
    line-height: 1.6;
    resize: vertical;
    font-family: inherit;
  }

  .form-group textarea:focus {
    outline: none;
    border-color: #ff6b35;
    background: rgba(255, 255, 255, 0.12);
  }

  .form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .char-counter {
    text-align: right;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-top: 0.5rem;
  }

  .btn-burn {
    width: 100%;
    padding: 1.25rem;
    background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
    border: none;
    border-radius: 0.75rem;
    color: white;
    font-size: 1.25rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
    position: relative;
    overflow: hidden;
  }

  .btn-burn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 107, 53, 0.4);
  }

  .btn-burn:active {
    transform: translateY(0);
  }

  /* Fire Animation */
  .fire-container {
    position: fixed;
    bottom: -100px;
    left: 50%;
    transform: translateX(-50%);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.5s;
    z-index: 1000;
  }

  .fire-container.active {
    opacity: 1;
    animation: rise 2s ease-out;
  }

  @keyframes rise {
    0% {
      bottom: -100px;
    }
    50% {
      bottom: 50%;
    }
    100% {
      bottom: -100px;
    }
  }

  .fire {
    position: relative;
    width: 200px;
    height: 200px;
  }

  .flame {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 50px;
    height: 80px;
    background: linear-gradient(to top, #f7931e 0%, #ff6b35 50%, transparent 100%);
    border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
    transform: translateX(-50%);
    animation: flicker 0.5s ease-in-out infinite alternate;
  }

  .flame:nth-child(2) {
    width: 60px;
    height: 100px;
    animation-delay: 0.1s;
    left: 40%;
  }

  .flame:nth-child(3) {
    width: 55px;
    height: 90px;
    animation-delay: 0.2s;
    left: 60%;
  }

  .flame:nth-child(4) {
    width: 45px;
    height: 70px;
    animation-delay: 0.3s;
    left: 35%;
  }

  .flame:nth-child(5) {
    width: 48px;
    height: 75px;
    animation-delay: 0.4s;
    left: 65%;
  }

  @keyframes flicker {
    0% {
      transform: translateX(-50%) scaleY(1) scaleX(1);
    }
    100% {
      transform: translateX(-50%) scaleY(1.1) scaleX(0.9);
    }
  }

  .burned-section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .burned-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .burned-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 100, 0, 0.2);
    border-radius: 1rem;
    padding: 1.5rem;
  }

  .burned-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .burned-icon {
    font-size: 1.5rem;
  }

  .burned-date {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
  }

  .burned-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .original,
  .transmuted {
    padding: 1rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 0.5rem;
  }

  .original strong,
  .transmuted strong {
    display: block;
    margin-bottom: 0.5rem;
    color: #ff6b35;
  }

  .original p,
  .transmuted p {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    white-space: pre-wrap;
  }

  .transmuted {
    border-left: 3px solid #ff6b35;
  }

  .empty-state {
    text-align: center;
    padding: 3rem;
    color: rgba(255, 255, 255, 0.5);
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("burnForm");
    const textarea = document.getElementById("content");
    const charCount = document.getElementById("char-count");
    const fireContainer = document.getElementById("fireContainer");

    // Licznik znak√≥w
    if (textarea && charCount) {
      textarea.addEventListener("input", () => {
        const count = textarea.value.length;
        charCount.textContent = count.toString();

        if (count > 400) {
          charCount.classList.add("text-red-500");
        } else {
          charCount.classList.remove("text-red-500");
        }
      });
    }

    // Fire animation on submit
    if (form && fireContainer) {
      form.addEventListener("submit", () => {
        fireContainer.classList.add("active");
        setTimeout(() => {
          fireContainer.classList.remove("active");
        }, 2000);
      });
    }
  });
</script>
