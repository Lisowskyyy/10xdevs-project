import Layout from "../layouts/Layout.astro";
import { createServerSupabaseClient } from "../lib/supabase";
import { updateUserProfile } from "../lib/identity";

const supabase = createServerSupabaseClient(Astro.cookies);
const {
  data: { session },
} = await supabase.auth.getSession();

if (!session) {
  return Astro.redirect("/login");
}

const user = session.user;

// --- HANDLE POST REQUESTS ---
if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  const action = formData.get("action")?.toString();

  // Update profile
  if (action === "update_profile") {
    const firstName = formData.get("first_name")?.toString() || null;
    const lastName = formData.get("last_name")?.toString() || null;

    // Check if this is the first time saving a name
    const { data: existingProfile } = await supabase.from("profiles").select("first_name").eq("id", user.id).single();

    const isFirstTimeNameSave = !existingProfile?.first_name && firstName;

    // Use the centralized identity service to update profile
    await updateUserProfile(supabase, {
      firstName: firstName,
      lastName: lastName,
    });

    // Redirect to prevent form resubmission
    // If this is the first time saving a name, redirect to dashboard with welcome flag
    if (isFirstTimeNameSave) {
      return Astro.redirect("/dashboard?welcome=true");
    }

    return Astro.redirect("/profile");
  }

  // Delete meditation log
  if (action === "delete_log") {
    const logId = formData.get("log_id")?.toString();

    if (logId) {
      await supabase.from("meditation_logs").delete().eq("id", logId).eq("user_id", user.id);
    }

    // Redirect to prevent form resubmission
    return Astro.redirect("/profile");
  }
}

// --- FETCH DATA ---
// Fetch user profile
const { data: profile } = await supabase.from("profiles").select("*").eq("id", user.id).single();

// Fetch meditation logs
const { data: logs } = await supabase
  .from("meditation_logs")
  .select(
    `
    id,
    duration_minutes,
    created_at,
    field_circles (
      intention
    )
  `
  )
  .eq("user_id", user.id)
  .order("created_at", { ascending: false });

const totalSessions = logs?.length || 0;
const totalMinutes = logs?.reduce((acc, log) => acc + (log.duration_minutes || 0), 0) || 0;
---

<Layout title="Profile - VERANIMA">
  <div class="profile-container">
    <main class="profile-main">
      <!-- Seeker Identity Card -->
