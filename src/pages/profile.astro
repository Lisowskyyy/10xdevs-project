<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("profile-form") as HTMLFormElement;
    const updateBtn = document.getElementById("update-btn") as HTMLButtonElement;
    const btnText = document.getElementById("btn-text") as HTMLElement;
    const btnSpinner = document.getElementById("btn-spinner") as HTMLElement;
    const statusMessage = document.getElementById("status-message") as HTMLElement;
    const firstNameInput = document.getElementById("first_name") as HTMLInputElement;
    const lastNameInput = document.getElementById("last_name") as HTMLInputElement;

    if (form && updateBtn && btnText && btnSpinner && statusMessage && firstNameInput && lastNameInput) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const firstName = firstNameInput.value.trim() || null;
        const lastName = lastNameInput.value.trim() || null;
        updateBtn.disabled = true;
        btnText.textContent = "Aktualizujƒô...";
        btnSpinner.classList.remove("hidden");
        statusMessage.classList.add("hidden");
        try {
          const response = await fetch("/api/profile", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ firstName, lastName }),
          });
          const data = await response.json();
          if (!response.ok) throw new Error(data.error || "Failed to update profile");
          statusMessage.textContent = "Profil zosta≈Ç zaktualizowany!";
          statusMessage.className = "status-message status-success";
          statusMessage.classList.remove("hidden");
          const isFirstTimeNameSave = !firstNameInput.defaultValue && firstName;
          setTimeout(() => {
            window.location.href = isFirstTimeNameSave ? "/dashboard?welcome=true" : "/dashboard";
          }, 1000);
        } catch (error) {
          const errorMessage =
            error instanceof Error ? error.message : "WystƒÖpi≈Ç b≈ÇƒÖd podczas aktualizacji profilu. Spr√≥buj ponownie.";
          statusMessage.textContent = errorMessage;
          statusMessage.className = "status-message status-error";
          statusMessage.classList.remove("hidden");
          updateBtn.disabled = false;
          btnText.textContent = "Zaktualizuj profil";
          btnSpinner.classList.add("hidden");
        }
      });
    }

    const deleteAccountBtn = document.getElementById("delete-account-btn");
    if (deleteAccountBtn) {
      deleteAccountBtn.addEventListener("click", async () => {
        if (!confirm("Czy na pewno? To operacja nieodwracalna.")) return;
        try {
          const response = await fetch("/api/auth/delete-account", {
            method: "DELETE",
            redirect: "manual",
          });
          const isOpaqueRedirect = response.type === "opaqueredirect" || response.status === 0;
          const isRedirect = response.status === 302 || response.status === 303;
          const isSuccess = response.status === 200;
          if (isOpaqueRedirect || isRedirect || isSuccess) {
            const { supabase } = await import("../lib/supabase");
            await supabase.auth.signOut();
            window.location.href = "/";
            return;
          }
          const data = await response.json().catch(() => ({}));
          alert(data?.error || "Nie uda≈Ço siƒô usunƒÖƒá konta.");
        } catch (err) {
          alert(err instanceof Error ? err.message : "WystƒÖpi≈Ç b≈ÇƒÖd. Spr√≥buj ponownie.");
        }
      });
    }

    window.deleteMeditationLog = async function (button: HTMLElement) {
      const logId = button.getAttribute("data-log-id");
      if (!logId) return;
      if (!confirm("Czy na pewno chcesz usunƒÖƒá ten wpis?")) return;
      try {
        const response = await fetch(`/api/meditation-logs/${logId}`, { method: "DELETE" });
        if (!response.ok) {
          const data = await response.json().catch(() => ({}));
          throw new Error(data.error || "B≈ÇƒÖd podczas usuwania");
        }
        const logEntry = button.closest(".log-item");
        if (logEntry) logEntry.remove();
        window.location.reload();
      } catch {
        alert("WystƒÖpi≈Ç b≈ÇƒÖd podczas usuwania wpisu. Spr√≥buj ponownie.");
      }
    };
  });
</script>
