---
import Layout from "../layouts/Layout.astro";
import { createServerSupabaseClient } from "../lib/supabase";

const supabase = createServerSupabaseClient(Astro.cookies);
const {
  data: { session },
} = await supabase.auth.getSession();

if (!session) {
  return Astro.redirect("/login");
}

const user = session.user;

// --- HANDLE POST REQUESTS ---
if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  const action = formData.get("action")?.toString();

  // Update profile
  if (action === "update_profile") {
    const firstName = formData.get("first_name")?.toString() || null;
    const lastName = formData.get("last_name")?.toString() || null;

    await supabase
      .from("profiles")
      .update({
        first_name: firstName,
        last_name: lastName,
      })
      .eq("id", user.id);

    // Redirect to prevent form resubmission
    return Astro.redirect("/profile");
  }

  // Delete meditation log
  if (action === "delete_log") {
    const logId = formData.get("log_id")?.toString();

    if (logId) {
      await supabase.from("meditation_logs").delete().eq("id", logId).eq("user_id", user.id);
    }

    // Redirect to prevent form resubmission
    return Astro.redirect("/profile");
  }
}

// --- FETCH DATA ---
// Fetch user profile
const { data: profile } = await supabase.from("profiles").select("*").eq("id", user.id).single();

// Fetch meditation logs
const { data: logs } = await supabase
  .from("meditation_logs")
  .select(
    `
    id,
    duration_minutes,
    created_at,
    field_circles (
      intention
    )
  `
  )
  .eq("user_id", user.id)
  .order("created_at", { ascending: false });

const totalSessions = logs?.length || 0;
const totalMinutes = logs?.reduce((acc, log) => acc + (log.duration_minutes || 0), 0) || 0;
---

<Layout title="Profile - VERANIMA">
  <div class="profile-container">
    <main class="profile-main">
      <!-- Header Section with Edit Form -->
      <section class="profile-header">
        <div class="profile-header-content">
          <!-- Avatar -->
          <div class="profile-avatar">
            <div class="avatar-wrapper">
              {
                user.user_metadata?.avatar_url ? (
                  <img src={user.user_metadata.avatar_url} alt="Avatar" class="avatar-image" />
                ) : (
                  <div class="avatar-placeholder">üßò‚Äç‚ôÇÔ∏è</div>
                )
              }
            </div>
          </div>

          <!-- Edit Profile Form -->
          <div class="profile-form-section">
            <h2 class="profile-title">Edit Profile</h2>

            <form method="POST" class="profile-form">
              <input type="hidden" name="action" value="update_profile" />

              <div class="form-row">
                <div class="form-group">
                  <label for="first_name" class="form-label">First Name</label>
                  <input
                    type="text"
                    id="first_name"
                    name="first_name"
                    value={profile?.first_name || ""}
                    placeholder="Enter your first name"
                    class="form-input"
                  />
                </div>

                <div class="form-group">
                  <label for="last_name" class="form-label">Last Name</label>
                  <input
                    type="text"
                    id="last_name"
                    name="last_name"
                    value={profile?.last_name || ""}
                    placeholder="Enter your last name"
                    class="form-input"
                  />
                </div>
              </div>

              <div class="form-actions">
                <button type="submit" class="btn-save">Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </section>

      <!-- Statistics Section -->
      <section class="stats-section">
        <div class="stat-card">
          <div class="stat-label">Total Sessions</div>
          <div class="stat-value">{totalSessions}</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Total Minutes</div>
          <div class="stat-value">
            {totalMinutes}<span class="stat-unit">min</span>
          </div>
        </div>
      </section>

      <!-- Meditation Logs Section -->
      <section class="logs-section">
        <div class="logs-header">
          <h2 class="logs-title">Meditation History</h2>
          <span class="logs-subtitle">Recent entries</span>
        </div>

        {
          logs && logs.length > 0 ? (
            <div class="logs-list">
              {logs.map((log) => {
                const fieldCircle = Array.isArray(log.field_circles) ? log.field_circles[0] : log.field_circles;
                const intention = fieldCircle?.intention || "Private Session";

                return (
                  <div class="log-item">
                    <div class="log-content">
                      <div class="log-icon">üßò</div>
                      <div class="log-details">
                        <div class="log-intention">{intention}</div>
                        <div class="log-date">
                          {new Date(log.created_at).toLocaleDateString("en-US", {
                            year: "numeric",
                            month: "short",
                            day: "numeric",
                          })}{" "}
                          ‚Ä¢{" "}
                          {new Date(log.created_at).toLocaleTimeString("en-US", {
                            hour: "2-digit",
                            minute: "2-digit",
                          })}
                        </div>
                      </div>
                    </div>

                    <div class="log-actions">
                      <div class="log-duration">+{log.duration_minutes} min</div>

                      <form
                        method="POST"
                        class="delete-form"
                        onsubmit="return confirm('Are you sure you want to delete this entry?');"
                      >
                        <input type="hidden" name="action" value="delete_log" />
                        <input type="hidden" name="log_id" value={log.id} />
                        <button type="submit" class="btn-delete" title="Delete entry">
                          üóëÔ∏è
                        </button>
                      </form>
                    </div>
                  </div>
                );
              })}
            </div>
          ) : (
            <div class="logs-empty">No meditation history yet. Start meditating to track your journey.</div>
          )
        }
      </section>
    </main>
  </div>
</Layout>

